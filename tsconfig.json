{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
  "include": ["src/**/*"],
  "exclude": [".git", "node_modules"]
}
